{
    "name": "manishgour/milople-coding-standard",
    "description": "Custom Coding Standard for Magento 2 Extensions Made by Milople",
    "type": "phpcodesniffer-standard",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Manish Gour",
            "email": "manishgour@milople.com"
        }
    ],
    "keywords": [
        "phpcs",
        "standards",
        "magento2"
    ],
    "require": {
        "magento/magento-coding-standard": "*"
    },
    "autoload": {
        "psr-4": {
            "ManishGour\\MilopleCodingStandard\\": "MCS/"
        }
    },
    "scripts": {
        "post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/manishgour/milople-coding-standard",
        "post-update-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/manishgour/milople-coding-standard"
    }
}
